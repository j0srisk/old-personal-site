---
import { ViewTransitions } from 'astro:transitions'

import Card from '../components/Card.astro'
import Headshot from '../components/Headshot.astro'
import Number from '../components/Number.astro'
import Name from '../components/Name.astro'
import Location from '../components/Location.astro'
import Social from '../components/Social.astro'
import Hero from '../components/Hero.astro'
import Navbar from '../components/Navbar.astro'
import ResumeItem from '../components/ResumeItem.astro'
import ProjectItem from '../components/ProjectItem.astro'
import Devicon from '../components/Devicon.astro'
import ProjectPreview from '../components/ProjectPreview.astro'
---

<!DOCTYPE html>
<html lang="en" class="bg-black">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/MemojiFavicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Joseph Risk Portfolio Site</title>

		<ViewTransitions />
	</head>
	<body
		class="font-astro w-full flex relative justify-center items-center bg-gradient-to-r from-gray-900 to-black no-scrollbar scroll-smooth"
	>
		<div class="flex flex-col w-full max-w-screen-xl z-10 justify-center items-center">
			{/* Main Page */}
			<div class="lg:h-screen flex flex-col">
				<div class="flex flex-col h-[100svh] p-4 md:h-screen lg:flex-row gap-4">
					<div class="flex flex-col gap-4 flex-1 lg:order-2">
						<div class="flex">
							<Navbar />
						</div>
						<div class="flex flex-1 gap-4">
							<div class="flex flex-col flex-1">
								<Headshot photo="MemojiYawn.png" />
							</div>
							<div class="flex flex-col flex-1 gap-4">
								<div>
									<Name title="Name" text="Joseph Risk" />
								</div>
								<div class="flex-1">
									<Location location="Austin" photo="Austin.jpg" />
								</div>
								<div>
									<Social />
								</div>
							</div>
						</div>
					</div>
					<div class="flex flex-col flex-1 gap-4">
						<div class="flex flex-1 flex-col">
							<Hero gif="Blue.gif" />
						</div>
						<div class="flex gap-4">
							<div class="flex flex-col flex-1 aspect-square">
								<Number gradient="bg-teal-500" title="7" extra="+" body="yrs of Freelancing" />
							</div>
							<div class="flex flex-col flex-1">
								<Number gradient="bg-amber-400" title="4" extra="+" body="yrs of Undergrad" />
							</div>
							<div class="flex flex-col flex-1">
								<Number gradient="bg-red-400" title="âˆž" extra="+" body="hrs of Leetcode" />
							</div>
						</div>
					</div>
				</div>
				<div class="flex flex-col lg:flex-row pt-0 gap-4 flex-1 p-4">
					<div class="flex flex-col lg:basis-2/5 overflow-hidden">
						<Card heading="About Me" link="Read More">
							<p class="text-accent md:text-base lg:text-sm">
								Recent graduate from the University of Texas at Austin with classwork and experience
								in software development, data analytics, and other emerging technologies. Used to
								the freelancing lifestyle but currently setting my sights on a full-time role where
								I can contribute to cutting-edge projects and help further drive digital
								transformation. Currently interested in practical LLM applications and sharpening my
								web development skills.
							</p>
						</Card>
					</div>
					<div class="flex flex-col lg:basis-3/5 aspect-video lg:aspect-auto">
						<Card heading="Projects" link="See All">
							<div class="w-full h-full flex gap-4">
								<ProjectPreview backgroundImage="MockupWebflow.jpg" text="Webflow" />
								<ProjectPreview backgroundImage="MockupFrontEnd2.jpg" text="Development" />
								<ProjectPreview backgroundImage="MockupAcademic3.jpg" text="Academic" />
							</div>
						</Card>
					</div>
				</div>
			</div>
			{/* Resume Page */}
			<div class="flex flex-col px-4 pb-4 w-screen max-w-screen-xl">
				<div id="education" class="">
					<Card heading="Education">
						<div class="flex flex-col gap-8 w-full">
							<ResumeItem
								icon="McCombs.jpg"
								title="University of Texas at Austin"
								date="December 2022"
								subtitle1="McCombs School of Business"
								subtitle2="BBA in Management Information Systems"
								subtitle3="Final GPA: 3.74"
								description="4 Semesters University Honors"
							/>
						</div>
					</Card>
				</div>
				<div id="experience" class="pt-4">
					<Card heading="Experience">
						<div class="flex flex-col gap-8 w-full">
							<ResumeItem
								icon="Neutrino.png"
								title="Neutrino Web Development"
								date="June 2017 - December 2022"
								subtitle1="Founder/Freelancer"
								subtitle3="Austin, TX"
								description="I've successfully collaborated with clients to identify their business needs and create custom web-based solutions. Using data analytics, I optimized user engagement and web performance. I implemented front-end technologies like HTML5 and React to enhance user experiences. Plus, I contributed to revenue growth by adopting proactive sales strategies and managing a strong client base."
							/>
							<ResumeItem
								icon="Markel.jpg"
								title="Markel Corporation"
								date="June 2022 - August 2022"
								subtitle1="Underwriting Intern"
								subtitle2="Austin, TX"
								description="In a Fortune 500 company, I gained solid corporate experience, presenting data-driven insights on industry trends to executives. I cooperated with a DevOps team to explore emerging technologies for the surety business. Moreover, I bolstered underwriters in risk analysis by scrutinizing financial statements and employing financial modeling techniques."
							/>
							<ResumeItem
								icon="Frontier.png"
								title="Frontier Extraction"
								date="January 2020 - January 2022"
								subtitle1="Founding Partner"
								subtitle2="Lincoln, NE"
								description="I have valuable entrepreneurial experience from setting up a hemp processing and brokering venture. I ensured compliance with regulations by working closely with local authorities on licensing matters. Additionally, I oversaw the IT infrastructure, which assured smooth business operations and maintained data integrity."
							/>
						</div>
					</Card>
				</div>
				<div id="projects" class="flex flex-col md:flex-row gap-4 pt-4">
					<div id="" class="lg:w-[calc(66.666667%-1rem)] md:w-1/2 flex-col gap-4 flex h-fit">
						<Card heading="React Projects" height="fit">
							<div class="flex w-full">
								<div class="grid w-full lg:grid-cols-2 grid-cols-1 gap-4">
									<ProjectItem
										icon="resumegpt.png"
										title="ResumeGPT"
										date="December 2022"
										description="Description Here"
										link="https://cv-application.josephrisk.com"
										github="https://www.google.com"
									>
										<Devicon icon="openai.svg" backgroundColor="bg-[#0CA37F]" />
										<Devicon icon="react.svg" backgroundColor="bg-[#61DAFB]" />
										<Devicon icon="tailwindcss.svg" backgroundColor="bg-[#38b2ac]" />
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
									<ProjectItem
										icon="nothotdog.png"
										title="Not Hotdog"
										description="Description Here"
										link="https://nothotdog.josephrisk.com/"
