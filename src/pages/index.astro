									>
										<Devicon icon="pytorch.svg" backgroundColor="bg-[#EE4C2C]" />
										<Devicon icon="docker.svg" backgroundColor="bg-[#019BC6]" />
										<Devicon icon="react.svg" backgroundColor="bg-[#61DAFB]" />
										<Devicon icon="tailwindcss.svg" backgroundColor="bg-[#38b2ac]" />
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
									<ProjectItem
										icon="mockuptool.png"
										title="Mockup Tool"
										description="Description Here"
										link="https://memory-card.josephrisk.com"
										github="https://www.google.com"
									>
										<Devicon icon="react.svg" backgroundColor="bg-[#61DAFB]" />
										<Devicon icon="tailwindcss.svg" backgroundColor="bg-[#38b2ac]" />
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
									<ProjectItem
										icon="memorycard.png"
										title="Memory Card Game"
										description="Description Here"
										link="https://memory-card.josephrisk.com"
										github="https://www.google.com"
									>
										<Devicon icon="react.svg" backgroundColor="bg-[#61DAFB]" />
										<Devicon icon="tailwindcss.svg" backgroundColor="bg-[#38b2ac]" />
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
									<ProjectItem
										icon="battleship.png"
										title="Battleship"
										description="Description Here"
										link="https://battleship.josephrisk.com"
										github="https://www.google.com"
									>
										<Devicon icon="vitest.svg" backgroundColor="bg-[#242424]" />
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
									<ProjectItem
										icon="weatherapp.png"
										title="Weather App"
										description="Description Here"
										link="https://weather-app.josephrisk.com"
										github="https://www.google.com"
									>
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
									<ProjectItem
										icon="etchasketch.png"
										title="Etch A Sketch"
										description="Description Here"
										link="https://etch-a-sketch.josephrisk.com/"
										github="https://www.google.com"
									>
										<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
										<Devicon icon="netlify.svg" backgroundColor="bg-[#004846]" />
									</ProjectItem>
								</div>
							</div>
						</Card>
					</div>
					<div id="" class="flex-1 flex-col gap-4 flex h-fit">
						<Card heading="Static Site Projects" height="fit">
							<ProjectItem
								icon="personalsite.png"
								title="Personal Site"
								description="Description Here"
								link="https://www.josephrisk.com"
								github="https://www.google.com"
							>
								<Devicon icon="astro.png" backgroundColor="bg-indigo-700" />
								<Devicon icon="tailwindcss.svg" backgroundColor="bg-[#38b2ac]" />
								<Devicon icon="javascript.svg" backgroundColor="bg-[#EFDB50]" />
								<Devicon icon="azure.svg" backgroundColor="bg-white" />
							</ProjectItem>
						</Card>
						<Card heading=" Webflow Projects" height="fit">
							<ProjectItem
								icon="MockupWebflow.jpg"
								title="Doloramics Landing Page"
								date="December 2022"
								description="Description Here"
								link="https://www.doloramics.com"
								github="https://www.google.com"
							>
								<Devicon icon="webflow.png" backgroundColor="bg-[#4354FE]" />
								<Devicon icon="figma.svg" backgroundColor="bg-white" />
							</ProjectItem>
							<ProjectItem
								icon="westlake.png"
								title="Westlake Auto Care"
								description="Description Here"
								link="https://www.westlakeautocare.com"
								github="https://www.google.com"
							>
								<Devicon icon="webflow.png" backgroundColor="bg-[#4354FE]" />
								<Devicon icon="figma.svg" backgroundColor="bg-white" />
							</ProjectItem>
							<ProjectItem
								icon="happyair.png"
								title="Happy Air HVAC"
								description="Description Here"
								link="https://www.doloramics.com"
								github="https://www.google.com"
							>
								<Devicon icon="webflow.png" backgroundColor="bg-[#4354FE]" />
								<Devicon icon="figma.svg" backgroundColor="bg-white" />
							</ProjectItem>
						</Card>
					</div>
				</div>
			</div>
		</div>

		{/* Background Gradients */}
		<div class="fixed top-0 left-0 w-screen h-screen">
			<div
				class="w-1/2 h-1/2 top-1/4 left-1/4 rounded-full blur-max absolute bg-gradient-to-r from-blue-400 to-pink-500"
			>
			</div>
		</div>
		<div class="hidden fixed top-0 left-0 w-screen h-screen">
			<div
				class="w-1/4 h-1/4 top-10 left-10 blur-max absolute bg-gradient-to-t from-blue-600 to-blue-700"
			>
			</div>
		</div>

		<style is:global>
			@tailwind base;
			@tailwind components;
			@tailwind utilities;

			@layer components {
				.card {
					@apply relative flex h-full w-full items-center justify-between overflow-hidden rounded-[13px] border border-white border-opacity-10 bg-white bg-opacity-10 backdrop-blur-sm;
				}

				.bg-noisy {
					@apply h-full w-full;
					background-image: url(/backgroundnoisy.webp);
				}

				.text-accent {
					@apply text-xs font-medium text-gray-300 text-opacity-80 transition-all duration-200 group-hover:text-opacity-100;
				}

				.text-primary {
					@apply text-center text-sm font-bold text-white;
				}

				.blur-max {
					-webkit-filter: blur(200px);
					backdrop-filter: blur(200px);
				}

				/* Hide scrollbar for Chrome, Safari and Opera */
				.no-scrollbar::-webkit-scrollbar {
					display: none;
				}

				/* Hide scrollbar for IE, Edge and Firefox */
				.no-scrollbar {
					-ms-overflow-style: none; /* IE and Edge */
					scrollbar-width: none; /* Firefox */
				}
			}
		</style>
	</body>
</html>
