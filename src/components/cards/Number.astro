---
import Card from '../Card.astro'
const { backgroundColor, number, symbol, text } = Astro.props
---

<Card noisy="true" backgroundColor={backgroundColor}>
	<div class="flex flex-col items-center justify-center h-full w-full">
		<div class="flex justify-end items-center gap-1">
			<h2 class="text-primary text-2xl lg:text-5xl md:text-3xl">{number}</h2>
			<h3 class="text-primary text-xs lg:text-base md:text-lg">{symbol}</h3>
		</div>
		<h3 class="text-primary text-xs lg:text-base md:text-lg">{text}</h3>
	</div>
</Card>
