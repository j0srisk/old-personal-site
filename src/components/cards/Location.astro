---
import { getImage } from 'astro:assets'
import Card from '../Card.astro'
import BackgroundNoise from '../BackgroundNoise.astro'
import BackgroundImage from '../BackgroundImage.astro'
import locationBackground from '../../assets/images/austin.jpg'
const optimizedBackground = await getImage({ src: locationBackground, width: 1000, height: 1000 })
---

<Card padding="py-2 px-4 md:p-4">
	<BackgroundImage image={optimizedBackground.src} />
	<BackgroundNoise />
	<div class="relative flex justify-between items-center h-8">
		<p class="text-accent text-xs md:text-base lg:text-sm">Current Location</p>
		<h2 class="text-primary text-sm md:text-2xl lg:text-xl">Austin</h2>
	</div>
</Card>
