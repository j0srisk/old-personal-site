---
const { location, photo } = Astro.props
---

<div class="card">
	<div class="w-full h-full bg-cover flex justify-between" style=`background-image: url(${photo});`>
		<div class="bg-noisy">
			<div class="flex justify-between items-center p-2 px-4 md:p-4">
				<p class="text-accent md:text-lg lg:text-sm">Current Location</p>
				<h2 class="text-primary text-sm md:text-2xl">{location}</h2>
			</div>
		</div>
	</div>
</div>
