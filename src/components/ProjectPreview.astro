---
import Hover from './Hover.astro'
const { backgroundImage, text, link } = Astro.props
---

<a
	href=""
	class="flex-1 h-full rounded-lg bg-cover bg-center hidden"
	style=`background-image: url(${backgroundImage});`
>
	<div
		class="w-full h-full flex items-center justify-center rounded-xl bg-black bg-opacity-70 opacity-0 hover:opacity-100 transition-all duration-500 ease-in-out"
	>
		<h3 class="text-white font-medium">{text}</h3>
	</div>
</a>

<div class="relative flex h-full w-fit rounded-lg shadow-md">
	<img src={backgroundImage} class="w-full h-full object-cover rounded-lg" />
	<Hover link={link} text={text} />
</div>
