---
const { link, github, text, newTab } = Astro.props

import { Image } from 'astro:assets'
import linkSVG from '../assets/images/icons/link.svg'
import gitHubSVG from '../assets/images/icons/github.svg'

let target = '_self'
if (newTab == 'true') {
	target = '_blank'
}
---

{
	link ? (
		<a
			href={link}
			target={target}
			class="absolute w-full h-full flex items-center justify-center rounded-lg bg-black bg-opacity-70 opacity-0 hover:opacity-100 transition-all duration-500 ease-in-out"
		>
			<div class="flex w-full h-full items-center justify-evenly gap-8">
				{text ? (
					<h3 class="text-white font-medium">{text}</h3>
				) : (
					<div class="block h-1/5 aspect-square ">
						<Image src={linkSVG} alt="link" class="w-full h-full" />
					</div>
				)}

				{github ? (
					<div class="block h-1/5 aspect-square">
						<Image src={gitHubSVG} alt="link" class="w-full h-full" />
					</div>
				) : (
					<> </>
				)}
			</div>
		</a>
	) : (
		<> </>
	)
}
