---
const { link, newTab } = Astro.props

let display = 'flex'
if (!link) {
	display = 'none'
}

let target = '_self'
if (newTab == 'true') {
	target = '_blank'
}
---

<a
	href={link}
	target={target}
	class="absolute w-full h-full flex items-center justify-center rounded-lg bg-black bg-opacity-70 opacity-0 hover:opacity-100 transition-all duration-500 ease-in-out"
	style={{ display }}
>
	<div class="flex w-full h-full items-center justify-evenly gap-8">
		<slot />
	</div>
</a>
