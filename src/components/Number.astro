---
const { gradient, title, extra, body } = Astro.props
---

<div class="card">
	<div class=`w-full h-full ${gradient}`>
		<div class="bg-noisy flex flex-col items-center justify-center p-2 md:p-4">
			<div class="flex justify-end items-center gap-1">
				<h2 class="text-primary text-2xl lg:text-5xl md:text-3xl">{title}</h2>
				<h3 class="text-primary text-xs lg:text-base md:text-lg">{extra}</h3>
			</div>
			<h3 class="text-primary text-xs lg:text-base md:text-lg">{body}</h3>
		</div>
	</div>
</div>
